<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingHorizontal="15dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_current_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/ll_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="12593831" />

    <LinearLayout
        android:id="@+id/ll_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ll_1">

        <TextView
            android:id="@+id/tv_operator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="+" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:divider="@drawable/landscape_divider"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintBottom_toTopOf="@id/ll_2">

        <Button
            android:id="@+id/btn_reihan"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="2.5"
            android:text="reihan"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_xl"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="xl"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="C"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_pos_or_neg"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="@color/secondary_text"
            android:text="M"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_modulus"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="@color/secondary_text"
            android:text="%"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="@color/accent"
            android:text="/"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:divider="@drawable/landscape_divider"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintBottom_toTopOf="@id/ll_3">

        <Button
            android:id="@+id/btn_inv"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
